{
  "name": "proofpay-subgraph",
  "version": "0.1.0",
  "description": "The Graph indexer for ProofPay multi-chain payments",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy-ethereum": "graph deploy --node https://api.thegraph.com/deploy/ proofpay/ethereum",
    "deploy-polygon": "graph deploy --node https://api.thegraph.com/deploy/ proofpay/polygon",
    "deploy-arbitrum": "graph deploy --node https://api.thegraph.com/deploy/ proofpay/arbitrum",
    "deploy-avalanche": "graph deploy --node https://api.thegraph.com/deploy/ proofpay/avalanche",
    "deploy-bsc": "graph deploy --node https://api.thegraph.com/deploy/ proofpay/bsc",
    "create-local": "graph create --node http://localhost:8020/ proofpay/proofpay",
    "remove-local": "graph remove --node http://localhost:8020/ proofpay/proofpay",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 proofpay/proofpay"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.62.0",
    "@graphprotocol/graph-ts": "^0.30.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}