{
  "name": "proofpay-subquery",
  "version": "0.0.1",
  "description": "SubQuery indexer for ProofPay on Cosmos chains",
  "main": "dist/index.js",
  "scripts": {
    "build": "subql build",
    "prepack": "rm -rf dist && npm run build",
    "test": "subql build && subql-node test",
    "codegen": "subql codegen",
    "start:docker": "docker-compose pull && docker-compose up --remove-orphans",
    "dev": "subql codegen && subql build && docker-compose pull && docker-compose up --remove-orphans",
    "clean": "rm -rf dist .subql_output"
  },
  "homepage": "https://github.com/your-org/proofpay-subquery",
  "repository": "git+https://github.com/your-org/proofpay-subquery.git",
  "files": [
    "dist",
    "schema.graphql",
    "project.yaml"
  ],
  "author": "ProofPay Team",
  "license": "MIT",
  "devDependencies": {
    "@polkadot/api": "^10",
    "@subql/types": "latest",
    "@subql/cli": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@subql/types-cosmos": "^1.0.0"
  },
  "resolutions": {
    "ipfs-unixfs": "6.0.6"
  }
}