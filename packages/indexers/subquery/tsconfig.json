{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es2019.array",
      "dom"
    ],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "node_modules/@subql/types-cosmos/dist/global.d.ts"
  ]
}