{
  "name": "@proofpay/contracts-evm",
  "version": "1.0.0",
  "description": "ProofPay EVM smart contracts for multi-chain deployment",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "coverage": "npx hardhat coverage",
    "deploy:localhost": "npx hardhat deploy --network localhost",
    "deploy:sepolia": "npx hardhat deploy --network sepolia",
    "deploy:polygon": "npx hardhat deploy --network polygon",
    "deploy:bsc": "npx hardhat deploy --network bsc",
    "deploy:arbitrum": "npx hardhat deploy --network arbitrum",
    "deploy:avalanche": "npx hardhat deploy --network avalanche",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "verify:polygon": "npx hardhat verify --network polygon",
    "verify:bsc": "npx hardhat verify --network bsc",
    "verify:arbitrum": "npx hardhat verify --network arbitrum",
    "verify:avalanche": "npx hardhat verify --network avalanche",
    "deploy:all:testnets": "npm run deploy:sepolia && npm run deploy:polygon-mumbai",
    "deploy:all:mainnets": "npm run deploy:polygon && npm run deploy:bsc && npm run deploy:arbitrum",
    "size": "npx hardhat size-contracts",
    "security:slither": "slither contracts/",
    "security:mythril": "myth analyze contracts/ProofPay.sol",
    "clean": "npx hardhat clean"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@chainlink/contracts": "^0.8.0"
  },
  "devDependencies": {
    "hardhat": "^2.19.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.5",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "dotenv": "^16.3.0"
  },
  "keywords": [
    "proofpay",
    "smart-contracts",
    "solidity",
    "hardhat",
    "chainlink",
    "ccip",
    "multi-chain"
  ],
  "author": "ProofPay Team",
  "license": "MIT"
}