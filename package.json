{
	"name": "proofpay",
	"main": "expo-router/entry",
	"version": "1.0.0",
	"scripts": {
		"start": "expo start",
		"android": "expo run:android",
		"ios": "expo run:ios",
		"test": "jest --watchAll",
		"lint": "expo lint",
		"demo:setup": "./scripts/dev-stack.sh start",
		"demo:stop": "./scripts/dev-stack.sh stop",
		"demo:restart": "./scripts/dev-stack.sh restart",
		"demo:status": "./scripts/dev-stack.sh status",
		"demo:logs": "./scripts/dev-stack.sh logs",
		"seed": "tsx scripts/seed-data.ts",
		"seed:clear": "tsx scripts/seed-data.ts --clear",
		"contracts:evm:compile": "cd packages/contracts-evm && npx hardhat compile",
		"contracts:evm:test": "cd packages/contracts-evm && npx hardhat test",
		"contracts:evm:deploy:localhost": "cd packages/contracts-evm && npx hardhat deploy --network localhost",
		"contracts:evm:deploy:sepolia": "cd packages/contracts-evm && npx hardhat deploy --network sepolia",
		"contracts:evm:deploy:polygon": "cd packages/contracts-evm && npx hardhat deploy --network polygon",
		"contracts:cosmwasm:build": "cd packages/contracts-cosmwasm && cargo wasm",
		"contracts:cosmwasm:test": "cd packages/contracts-cosmwasm && cargo test",
		"contracts:cosmwasm:optimize": "cd packages/contracts-cosmwasm && docker run --rm -v \"$(pwd)\":/code --mount type=volume,source=\"$(basename \"$(pwd)\")_cache\",target=/code/target --mount type=volume,source=registry_cache,target=/usr/local/cargo/registry cosmwasm/rust-optimizer:0.12.13",
		"security:contracts": "cd packages/contracts-evm && npx slither contracts/",
		"security:audit": "npm audit && npm run security:contracts"
	},
	"jest": {
		"preset": "jest-expo"
	},
	"dependencies": {
		"@burnt-labs/abstraxion-react-native": "1.0.0-alpha.6",
		"@cosmjs/cosmwasm-stargate": "^0.33.1",
		"@expo/vector-icons": "^14.1.0",
		"@react-native-async-storage/async-storage": "^2.1.2",
		"@react-navigation/bottom-tabs": "^7.2.0",
		"@react-navigation/native": "^7.0.14",
		"@reclaimprotocol/reactnative-sdk": "^3.0.0",
		"@supabase/supabase-js": "^2.56.0",
		"dayjs": "^1.11.13",
		"expo": "53.0.20",
		"expo-blur": "~14.1.5",
		"expo-camera": "~16.1.11",
		"expo-clipboard": "~7.1.5",
		"expo-constants": "~17.1.6",
		"expo-dev-client": "~5.2.4",
		"expo-font": "~13.3.1",
		"expo-haptics": "~14.1.4",
		"expo-image-picker": "^16.1.4",
		"expo-linear-gradient": "^14.1.5",
		"expo-linking": "~7.1.7",
		"expo-router": "~5.1.4",
		"expo-splash-screen": "~0.30.10",
		"expo-status-bar": "~2.2.3",
		"expo-symbols": "~0.4.5",
		"expo-system-ui": "~5.0.10",
		"expo-updates": "~0.28.17",
		"expo-web-browser": "~14.2.0",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"react-native": "0.79.5",
		"react-native-gesture-handler": "~2.24.0",
		"react-native-get-random-values": "^1.11.0",
		"react-native-libsodium": "^1.4.0",
		"react-native-quick-crypto": "^0.7.12",
		"react-native-reanimated": "~3.17.4",
		"react-native-safe-area-context": "5.4.0",
		"react-native-screens": "~4.11.1",
		"react-native-svg": "15.11.2",
		"react-native-toast-message": "^2.3.3",
		"react-native-webview": "13.13.5",
		"@metamask/sdk-react-native": "^0.13.0",
		"@walletconnect/react-native-compat": "^2.10.0",
		"@walletconnect/modal-react-native": "^1.0.0-rc.10",
		"@keplr-wallet/types": "^0.12.0",
		"ethers": "^6.8.0",
		"wagmi": "^2.5.0",
		"viem": "^2.7.0",
		"@tanstack/react-query": "^5.20.0",
		"@apollo/client": "^3.9.0",
		"graphql": "^16.8.0"
	},
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@types/jest": "^29.5.12",
		"@types/node": "^22.15.14",
		"@types/react": "~19.0.10",
		"@types/react-native": "^0.72.8",
		"@types/react-test-renderer": "^19.0.0",
		"eslint": "^9.0.0",
		"eslint-config-expo": "~9.2.0",
		"jest": "^29.2.1",
		"jest-expo": "~53.0.9",
		"node-fetch": "^3.3.2",
		"react-test-renderer": "19.0.0",
		"tsx": "^4.6.2",
		"typescript": "~5.8.3"
	},
	"private": true
}
